<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="customBottomNavigationFontStyle">

        <item name="android:textStyle">bold</item>
    </style>
    <!-- tabLayout 텍스트 커스텀 -->
    <style name="tab_text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_regular</item>
        <item name="tabSelectedTextColor">@color/orange_01</item>
        <item name="tabTextColor">@color/grayAE</item>
    </style>
    <!-- tabLayout 커스텀-->
    <style name="tab_style">
        <item name="tabTextAppearance">@style/tab_text_style</item>
        <item name="tabIndicatorColor">@color/orange_01</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabRippleColor">@null</item>
    </style>
</resources>