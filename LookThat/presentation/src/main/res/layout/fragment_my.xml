<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_my_toolbar_tv"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="My"
            android:background="@drawable/bg_underlined_box"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/fragment_my_setting_btn_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_my_toolbar_tv"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_my_toolbar_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
