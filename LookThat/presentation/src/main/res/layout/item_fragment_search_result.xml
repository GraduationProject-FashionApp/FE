<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:background="@drawable/bg_item_search_result_radius"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">
        <ImageView
            android:id="@+id/item_search_result_iv"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/bg_item_search_result_iv_radius"
            app:layout_constraintVertical_weight="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_search_result_info_txt"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_search_result_info_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2"
            app:layout_constraintTop_toBottomOf="@id/item_search_result_iv"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/item_search_result_brand_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="브랜드명"
                android:textSize="10sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/item_search_result_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="제품명제품명제품명"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/item_search_result_brand_name_txt"
                app:layout_constraintStart_toStartOf="@id/item_search_result_brand_name_txt"/>
            <TextView
                android:id="@+id/item_search_result_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30000원"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@id/item_search_result_brand_name_txt"
                app:layout_constraintBottom_toTopOf="@id/item_search_result_like_iv"/>
            <ImageView
                android:id="@+id/item_search_result_like_iv"
                android:src="@drawable/ic_like_star"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/item_search_result_brand_name_txt"
                app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
                android:id="@+id/item_search_result_like_cnt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="#FFFFBC10"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/item_search_result_like_iv"
                app:layout_constraintTop_toTopOf="@id/item_search_result_like_iv"
                app:layout_constraintBottom_toBottomOf="@id/item_search_result_like_iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>