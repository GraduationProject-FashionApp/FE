<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_item_search_result_radius"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">
        <ImageView
            android:id="@+id/item_search_result_iv"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_item_search_result_radius"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_search_result_info"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_search_result_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item_search_result_iv"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/item_search_result_brand_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text=""
                android:textSize="10sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/item_search_result_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="제품명제품명제품명"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/item_search_result_brand_name_txt"
                app:layout_constraintStart_toStartOf="@id/item_search_result_brand_name_txt"/>
            <TextView
                android:id="@+id/item_search_result_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30000원"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@id/item_search_result_brand_name_txt"
                app:layout_constraintTop_toBottomOf="@id/item_search_result_title_txt"/>
